    <script>
        // Navigation entre les sections
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                const target = this.getAttribute('data-target');
                
                // Mettre à jour la navigation active
                document.querySelectorAll('.nav-item').forEach(nav => {
                    nav.classList.remove('active');
                });
                this.classList.add('active');
                
                // Afficher la section cible
                document.querySelectorAll('.section').forEach(section => {
                    section.classList.remove('active');
                });
                document.getElementById(target).classList.add('active');
            });
        });

        // Gestion des onglets dans la section Agents
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const tabId = this.getAttribute('data-tab');
                
                // Mettre à jour les onglets actifs
                document.querySelectorAll('.tab').forEach(t => {
                    t.classList.remove('active');
                });
                this.classList.add('active');
                
                // Afficher le contenu de l'onglet
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Gestion des cases à cocher
        document.querySelectorAll('.task-checkbox').forEach(checkbox => {
            checkbox.addEventListener('click', function() {
                this.classList.toggle('checked');
                if (this.classList.contains('checked')) {
                    this.innerHTML = '<i class="fas fa-check"></i>';
                } else {
                    this.innerHTML = '';
                }
            });
        });

        // Initialisation des données
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les années pour les sélecteurs
            const currentYear = new Date().getFullYear();
            const yearSelect = document.getElementById('planning-year');
            const statsYearSelect = document.getElementById('stats-year');
            
            for (let year = currentYear - 5; year <= currentYear + 5; year++) {
                const option = document.createElement('option');
                option.value = year;
                option.textContent = year;
                if (year === currentYear) {
                    option.selected = true;
                }
                yearSelect.appendChild(option);
            }
            
            // Initialiser le mois actuel
            const currentMonth = new Date().getMonth() + 1;
            document.getElementById('planning-month').value = currentMonth;
            document.getElementById('stats-month').value = currentMonth;
            
            // Mettre à jour les compteurs du tableau de bord
            updateDashboardCounts();
            
            // Charger la liste des agents
            loadAgentsList();
        });

        // Fonction pour mettre à jour les compteurs du tableau de bord
        function updateDashboardCounts() {
            // Simuler des données (dans une vraie application, cela viendrait d'une API)
            document.getElementById('active-agents-count').textContent = '24 agents actuellement en service';
            document.getElementById('today-shifts').textContent = '8 agents en poste aujourd\'hui';
            document.getElementById('current-absences').textContent = '3 absences programmées cette semaine';
        }

        // Fonction pour charger la liste des agents
        function loadAgentsList() {
            // Simuler le chargement des agents (dans une vraie application, cela viendrait d'une API)
            const agents = [
                { code: 'A01', nom: 'Dupont', prenom: 'Alice', groupe: 'A' },
                { code: 'B02', nom: 'Martin', prenom: 'Bob', groupe: 'B' },
                { code: 'C03', nom: 'Lefevre', prenom: 'Carole', groupe: 'C' },
                { code: 'D04', nom: 'Dubois', prenom: 'David', groupe: 'D' },
                { code: 'E01', nom: 'Zahiri', prenom: 'Ahmed', groupe: 'E' },
                { code: 'E02', nom: 'Zarrouk', prenom: 'Benoit', groupe: 'E' }
            ];
            
            const tableBody = document.getElementById('agents-table-body');
            tableBody.innerHTML = '';
            
            agents.forEach(agent => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${agent.code}</td>
                    <td>${agent.nom}</td>
                    <td>${agent.prenom}</td>
                    <td>${agent.groupe}</td>
                    <td>
                        <button class="btn btn-sm btn-primary" onclick="editAgent('${agent.code}')"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-sm btn-danger" onclick="deleteAgent('${agent.code}')"><i class="fas fa-trash"></i></button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
            
            // Mettre à jour les sélecteurs d'agents dans les autres sections
            updateAgentSelectors(agents);
        }

        // Fonction pour mettre à jour les sélecteurs d'agents dans toutes les sections
        function updateAgentSelectors(agents) {
            const selectors = [
                'planning-agent', 'absence-agent', 'stats-agent', 
                'radio-agent', 'panic-agent', 'clothing-agent', 
                'warn-agent', 'leave-agent'
            ];
            
            selectors.forEach(selectorId => {
                const selector = document.getElementById(selectorId);
                if (selector) {
                    // Sauvegarder la sélection actuelle
                    const currentValue = selector.value;
                    
                    // Vider et remplir le sélecteur
                    selector.innerHTML = '<option value="">Sélectionner un agent</option>';
                    agents.forEach(agent => {
                        const option = document.createElement('option');
                        option.value = agent.code;
                        option.textContent = `${agent.code} - ${agent.nom} ${agent.prenom}`;
                        if (agent.code === currentValue) {
                            option.selected = true;
                        }
                        selector.appendChild(option);
                    });
                }
            });
        }

        // Fonctions pour la gestion des agents
        function editAgent(code) {
            // Remplir le formulaire avec les données de l'agent
            // Dans une vraie application, cela récupérerait les données de l'agent depuis une API
            alert(`Modification de l'agent ${code} - Cette fonctionnalité sera implémentée avec le backend`);
        }

        function deleteAgent(code) {
            if (confirm(`Êtes-vous sûr de vouloir supprimer l'agent ${code} ?`)) {
                // Dans une vraie application, cela enverrait une requête de suppression à l'API
                alert(`Agent ${code} supprimé - Cette fonctionnalité sera implémentée avec le backend`);
                // Recharger la liste des agents
                loadAgentsList();
            }
        }

        // Gestion des événements des boutons
        document.getElementById('btn-add-agent').addEventListener('click', function() {
            const code = document.getElementById('agent-code').value;
            const nom = document.getElementById('agent-nom').value;
            const prenom = document.getElementById('agent-prenom').value;
            const groupe = document.getElementById('agent-groupe').value;
            
            if (!code || !nom || !prenom || !groupe) {
                alert('Veuillez remplir tous les champs');
                return;
            }
            
            // Dans une vraie application, cela enverrait une requête à l'API
            alert(`Agent ${code} ajouté - Cette fonctionnalité sera implémentée avec le backend`);
            
            // Réinitialiser le formulaire
            document.getElementById('agent-code').value = '';
            document.getElementById('agent-nom').value = '';
            document.getElementById('agent-prenom').value = '';
            document.getElementById('agent-groupe').value = '';
            
            // Recharger la liste des agents
            loadAgentsList();
        });

        // Ajouter d'autres gestionnaires d'événements pour les autres boutons...
    </script>
</body>
</html>
